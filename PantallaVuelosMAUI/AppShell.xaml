<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PantallaVuelosMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PantallaVuelosMAUI">


    <FlyoutItem Title="Enlace 1">
        
            <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        
    </FlyoutItem>
    
    
    <FlyoutItem Title="Enlace 2">
        <ShellContent Route="Hola">
            <ContentPage>
                <VerticalStackLayout>
                    <Label Text="Hola"></Label>
                    <Button Clicked="Button_Clicked" Text="Ir a Adios"></Button>
                </VerticalStackLayout>
            </ContentPage>
        </ShellContent>


        <ShellContent Route="Adios">
            <ContentPage>
                <Label Text="Adios"></Label>
            </ContentPage>
        </ShellContent>
    </FlyoutItem>


</Shell>

    
